function center($text, $size){
	if(strlen(html_entity_decode($text))>=$size){
		return $text;
	}
	$spaces = str_repeat(" ", ($size-strlen(html_entity_decode($text, ENT_COMPAT, 'UTF-8')))/2);
	return $spaces.$text.$spaces;
}

