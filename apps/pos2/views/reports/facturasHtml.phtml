	$conditions.= " AND {#Factura}.salon_id = '$salon_id'";
}

$cantidad = 0;
$propina = 0;
$iva = 0;
$impo = 0;
$total = 0;
$valor = 0;
$nota = 0;
$totalneto = 0;

$query = new ActiveRecordJoin(array(
	'entities' => array('Factura', 'Salon'),
	'conditions' => $conditions,
	'fields' => array(
		'{#Factura}.id',
		'{#Factura}.fecha',
		'{#Factura}.prefijo_facturacion',
		'{#Factura}.consecutivo_facturacion',
