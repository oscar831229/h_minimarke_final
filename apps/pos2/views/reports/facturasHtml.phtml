	echo "<td align='right'>", Currency::number($factura->total, 2), "</td>";
	echo "<td align='right'>", Currency::number($valor_nota, 2), "</td>";
	echo "<td align='right'>", Currency::number($factura->total-$valor_nota, 2), "</td>";
